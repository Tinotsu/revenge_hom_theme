<section class="md:flex">
    <img src="{{ section.settings.image}}" class="h-[100%] w-[100%] md:w-[45vw]" width="" height="">
    <div class="flex flex-col justify-center bg-revenge2 space-y-10 md:space-y-24 w-[full] md:w-[55vw] text-center md:text-left py-8 px-6 md:px-0 md:pl-24">        
        <div class="space-y-[15px] md:space-y-4">
            <h2 class="a-h2 text-revenge1">{{ section.settings.titre }}</h2>
            <p class="a-p text-revenge1">{{ section.settings.description }}</p>
        </div>
        <div>
            <a href="{{ section.settings.lien }}" class="a-btn1 text-revenge1 border-revenge1">
                {{ section.settings.bouton }}
            </a>
        </div>
    </div>
</section>

{% schema %}
    {
      "name": "a-all-categories",
      "settings": [
        {
          "type": "text",
          "id": "titre",
          "label": "Titre"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "bouton",
          "label": "Bouton"
        },
        {
          "type": "text",
          "id": "image",
          "label": "URL Image"
        }
      ]
    }
{% endschema %}